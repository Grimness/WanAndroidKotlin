<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_10000000">

    <ImageView
        android:id="@+id/sv_error_icon"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_180"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_cry_fill" />
    <!--android:backgroundTint-->

    <TextView
        android:id="@+id/sv_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_error_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:text="加载失败"
        android:textColor="@color/color_2c2c2c"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/sv_error_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_error_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_retry_background"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_3"
        android:text="点我重试"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>