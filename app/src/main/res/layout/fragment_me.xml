<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ivTop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_me_meinv" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNoLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_20"
                            android:text="未登录"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:background="?android:selectableItemBackground"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_16"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:id="@+id/icon"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                tools:background="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start|center"
                                android:padding="@dimen/dp_16"
                                android:textColor="@color/color_333333"
                                android:textSize="@dimen/sp_14"
                                tools:text="userName" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="start"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_16"
                            android:text="搜索"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/color_eeeeee" />

                        <TextView
                            android:id="@+id/tvWxArticle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="start"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_16"
                            android:text="公众号"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/color_eeeeee" />

                        <TextView
                            android:id="@+id/tvCollect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="start"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_16"
                            android:text="收藏"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/color_eeeeee" />

                        <TextView
                            android:id="@+id/tvUserArticle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="start"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_16"
                            android:text="广场"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/color_eeeeee" />

                        <TextView
                            android:id="@+id/tvWenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?android:selectableItemBackground"
                            android:gravity="start"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/dp_16"
                            android:text="问答"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{listener::onClick}"
                        android:padding="@dimen/dp_16"
                        android:text="退出"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.ziqi.baselibrary.util.statusbar.view.StatusBarHeightRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_toolbar" />

            </com.ziqi.baselibrary.util.statusbar.view.StatusBarHeightRelativeLayout>


        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/fragment_me_header"
            app:menu="@menu/menu_me" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>